depend() {
	use dns
	need net
	provide jabber-server
}

start() {
	ebegin "Starting ejabberd"
	/usr/sbin/ejabberdctl ${EJABBERDCTL_OPT} start
	eend $?
}

stop() {
	ebegin "Stopping ejabberd"
	/usr/sbin/ejabberdctl stop
	eend $?
}
